<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground">
        <TextView
            android:layout_width="60dp"
            android:layout_height="@dimen/row_height"
            android:text="ASTR-798"
            android:textSize="@dimen/textSize"
            android:padding="4dp"
            android:background="@drawable/border"
            android:id="@+id/courseid"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="@dimen/row_height"
            android:text="Not Initialized"
            android:textSize="@dimen/textSize"
            android:padding="4dp"
            android:background="@drawable/border"
            android:id="@+id/coursetitle"
            android:layout_toRightOf="@id/courseid"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="@dimen/row_height"
            android:text="17:30-18:45"
            android:textSize="@dimen/textSize"
            android:padding="4dp"
            android:background="@drawable/border"
            android:id="@+id/coursetime"
            android:layout_toRightOf="@id/coursetitle"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="@dimen/row_height"
            android:text="Not Initialized"
            android:textSize="@dimen/textSize"
            android:padding="4dp"
            android:background="@drawable/border"
            android:id="@+id/courseinstructor"
            android:layout_toRightOf="@id/coursetime"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="@dimen/row_height"
            android:text="100"
            android:textSize="@dimen/textSize"
            android:padding="4dp"
            android:background="@drawable/border"
            android:id="@+id/coursewaitlist"
            android:layout_toRightOf="@id/courseinstructor"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>