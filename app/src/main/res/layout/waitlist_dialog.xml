<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/customDialogText"
        android:text="@string/waitlist_confirmation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:gravity="center"
        android:textSize="@dimen/titles"
        android:layout_marginTop="@dimen/vertical_spacing"
        android:padding="@dimen/sixteen_dp_padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/sixteen_dp_padding">

        <Button
            android:id="@+id/yesButton"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:text="@string/yes"
            android:layout_weight="1"
            android:background="@color/darkRed"
            android:textColor="@color/colorBackground"
            android:layout_marginRight="@dimen/horizontal_spacing"
            />
        <Button
            android:id="@+id/noButton"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:text="@string/no"
            android:layout_weight="1"
            android:background="@color/darkest_red"
            android:textColor="@color/colorBackground"
            />
    </LinearLayout>

</LinearLayout>
